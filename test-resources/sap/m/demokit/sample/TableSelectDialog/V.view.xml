<mvc:View
	controllerName="sap.m.sample.TableSelectDialog.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Input
				id="productInput"
				type="Text"
				value="Astro Phone 6"
				placeholder="Enter Product ..."
				showValueHelp="true"
				valueHelpOnly="true"
				valueHelpRequest="handleValueHelp"
				width="15rem"
				class="sapUiSmallMarginBottom"/>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Table Select Dialog"
				press="handleTableSelectDialogPress">
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Table Select Dialog (Multi)"
				press="handleTableSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
				</customData>
			</Button>
			<Button
				class="sapUiSmallMarginBottom"
				text="Show Table Select Dialog (Remember)"
				press="handleTableSelectDialogPress">
				<customData>
					<core:CustomData
						key="multi"
						value="true" />
					<core:CustomData
						key="remember"
						value="true" />
				</customData>
			</Button>
		</l:content>
	</l:VerticalLayout>
</mvc:View>