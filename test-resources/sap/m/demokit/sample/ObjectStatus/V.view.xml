<mvc:View
	controllerName="sap.m.sample.ObjectStatus.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				text="Unknown"
				icon="sap-icon://status-inactive"
				state="None" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				text="Currently closed"
				icon="sap-icon://hint"
				state="Information" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				text="Product Shipped"
				icon="sap-icon://status-positive"
				state="Success" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				text="Product Missing"
				icon="sap-icon://status-critical"
				state="Warning" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				text="Product Damaged"
				icon="sap-icon://status-negative"
				state="Error" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				text="Product Damaged"
				state="Error" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				title="Product status"
				text="Damaged"
				active="true"
				state="Error"
				press="handleStatusPressed"
				icon="sap-icon://alert" />
			<ObjectStatus
				class="sapUiSmallMarginBottom"
				title="Test"
				active="true"
				state="Error"
				icon="sap-icon://alert" />

			<Label text="ObjectStatus with style sapMObjectStatusLarge applied" class="sapUiSmallMarginTop"/>
			<ObjectStatus
				class="sapMObjectStatusLarge"
				title="Product status"
				text="Shipped"
				state="Success"
				icon="sap-icon://status-positive" />
		</l:content>
	</l:VerticalLayout>
</mvc:View>