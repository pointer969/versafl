<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core">
	<Dialog
			title="Dialog with Segmented Button"
			class="sapUiContentPadding">
		<content>
			<SegmentedButton selectedKey="SBApproved" width="100%">
				<items>
					<SegmentedButtonItem text="Approved" key="SBApproved"/>
					<SegmentedButtonItem text="Rejected"/>
					<SegmentedButtonItem text="Lookup"/>
				</items>
			</SegmentedButton>
		</content>
		<beginButton>
			<Button text="Close" press="onCloseDialog"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>