<mvc:View
		controllerName="sap.ui.unified.sample.CalendarSpecialDaysLegend.CalendarSpecialDaysLegend"
		xmlns:l="sap.ui.layout"
		xmlns:u="sap.ui.unified"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:html="http://www.w3.org/1999/xhtml"
		class="viewPadding">
	<l:VerticalLayout>
		<l:content>
			<u:Calendar
					id="calendar1" legend="legend1"/>
			<u:CalendarLegend
					id="legend1" />
			<u:Calendar
					id="calendar2" legend="legend2"/>
			<u:CalendarLegend
					id="legend2" standardItems="Today"/>
		</l:content>
		<ToggleButton text="Special Days" press="handleShowSpecialDays"></ToggleButton>
	</l:VerticalLayout>
</mvc:View>
