<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.f"
		xmlns:w="sap.ui.integration.widgets"
		displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="Min height of the card content "/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>
		<content>
			<Panel>
				<w:Card class="sapUiMediumMargin" id="lineChart" manifest="{manifests>/minHeight/line}" height="32rem" width="400px"/>
				<w:Card class="sapUiMediumMargin" id="stackedColumnChart" manifest="{manifests>/minHeight/stackedColumn}"  height="24rem" width="400px"/>
				<w:Card class="sapUiMediumMargin" id="stackedBarChart" manifest="{manifests>/minHeight/stackedBar}"  height="12rem" width="400px"/>
				<w:Card class="sapUiMediumMargin" id="donutChart" manifest="{manifests>/minHeight/donut}" width="400px"/>
				<w:Card class="sapUiMediumMargin" id="smallList" manifest="{manifests>/minHeight/smallList}" width="400px"/>
				<w:Card class="sapUiMediumMargin" id="mediumList" manifest="{manifests>/minHeight/mediumList}" width="400px"/>
				<w:Card class="sapUiMediumMargin" id="largeList" manifest="{manifests>/minHeight/largeList}" width="400px"/>
			</Panel>
		</content>
	</Page>
</mvc:View>