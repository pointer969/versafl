<mvc:View xmlns:mvc="sap.ui.core.mvc"
		   xmlns="sap.uxap"
		   xmlns:layout="sap.ui.layout"
		   xmlns:m="sap.m"
		   xmlns:personal="sap.uxap.sample.ObjectPageFormLayout.controller.blocks"
		   xmlns:employment="sap.uxap.sample.ObjectPageFormLayout.controller.blocks"
		   xmlns:blockcolor="sap.uxap.sample.ObjectPageFormLayout.controller.blocks"
		   controllerName="sap.uxap.sample.ObjectPageFormLayout.controller.ObjectPageFormLayout"
		   height="100%">

	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true">
		<headerTitle>
			<ObjectPageHeader objectImageURI="./test-resources/sap/uxap/images/imageID_275314.png"
							  objectTitle="Denise Smith"
							  objectImageShape="Circle"
							  objectImageAlt="Denise Smith"
							  isObjectIconAlwaysVisible="true"
							  objectSubtitle="Senior UI Developer">
				<actions>
					<ObjectPageHeaderActionButton icon="sap-icon://pull-down" text="show section" type="Emphasized" tooltip="pull-down"/>
					<ObjectPageHeaderActionButton icon="sap-icon://show" text="show state" type="Emphasized" tooltip="show"/>
				</actions>
				<breadCrumbsLinks>
					<m:Link text="Page 1 a very long link" press="handleLink1Press"/>
					<m:Link text="Page 2 long link" press="handleLink2Press"/>
				</breadCrumbsLinks>
			</ObjectPageHeader>
		</headerTitle>

		<headerContent>
			<layout:VerticalLayout>
				<m:Link text="+33 6 4512 5158"/>
				<m:Link text="DeniseSmith@sap.com"/>
				<layout:HorizontalLayout>
					<m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
					<m:Image src="./test-resources/sap/uxap/images/Twitter.png"/>
				</layout:HorizontalLayout>
			</layout:VerticalLayout>

			<layout:VerticalLayout>
				<m:Label text="Hello! I am Denise and I use UxAP"/>
				<m:VBox height="63px">
					<m:Label text="Achieved goals"/>
					<m:ProgressIndicator
							percentValue="30"
							displayValue="30%"
							showValue="true"
							state="None"/>
				</m:VBox>
			</layout:VerticalLayout>

			<layout:VerticalLayout>
				<m:Label text="San Jose, USA"/>
			</layout:VerticalLayout>
		</headerContent>

		<sections>
			<ObjectPageSection title="Personal">
				<subSections>
					<ObjectPageSubSection title=" ">
						<blocks>
							<personal:PersonalFormBlock id="personalinfo" columnLayout="3"/>
							<blockcolor:BlockBlue id="bbt1"/>
							<blockcolor:BlockBlue id="bbt2"/>
							<blockcolor:BlockBlue id="bbt3"/>
							<blockcolor:BlockBlue id="bbt4"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Employment">
				<subSections>
					<ObjectPageSubSection title="Employment">
						<blocks>
							<employment:BlockJobInfo id="jobinfo" columnLayout="3"/>
							<blockcolor:BlockBlue id="bbt5"/>
							<blockcolor:BlockBlue id="bbt6"/>
							<blockcolor:BlockBlue id="bbt7"/>
							<blockcolor:BlockBlue id="bbt8"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>
